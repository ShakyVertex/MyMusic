<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_large"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!--标题-->
    <TextView
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/text_large"
        android:text="@string/term_service_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_marginTop="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <TextView
            android:id="@+id/content"
            android:lineSpacingMultiplier="@dimen/line_space"
            android:textColor="?attr/colorOnSurface"
            android:textSize="@dimen/text_meddle"
            android:text="@string/term_service_privacy_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <!--Accept Button-->
    <com.google.android.material.button.MaterialButton
        android:text="@string/agree"
        android:id="@+id/primary"
        android:layout_marginTop="@dimen/padding_large"
        app:cornerRadius="@dimen/d27_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--Reject Button-->
    <Button
        android:id="@+id/disagree"
        android:textSize="@dimen/text_small"
        android:layout_marginTop="@dimen/padding_meddle"
        android:background="@color/transparent"
        android:textColor="@color/black80"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/disagree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"/>
</LinearLayout>